{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@user/*": [
				"src/modules/user/*"
			],
			"@product/*": [
				"src/modules/product/*"
			],
			"@core": [
				"src/core"
			],
			"@bootstrap": [
				"src/bootstrap"
			]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"ts-node": {
		"transpileOnly": true,
		"require": [
			"tsconfig-paths/register"
		],
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"tests"
	]
}